generator client {
  provider = "prisma-client-js"
  // output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id          String @id @default(uuid())
  email       String
  
  firstName   String?
  lastName    String?
  imageUrl    String?
  
  clerkUserId String @unique
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  settings     UserSettings?
  habits       Habit[]
  moodEntry   MoodEntry[]
}

model UserSettings {
  userId String @id @map("user_id")

  notificationsEnabled Boolean @default(true)  @map("notifications_enabled")
  emailNotifications   Boolean @default(true)  @map("email_notifications")
  smsNotifications     Boolean @default(false) @map("sms_notifications")

  email     String? @map("email")
  phone     String? @map("phone")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt      @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_settings")
}

enum HabitStatus {
  ACTIVE
  PAUSED
  ARCHIVED
}

model Habit {
  id          String @id @default(uuid())
  userId      String @map("user_id")

  name        String    @db.VarChar(255)
  emoji       String?   @db.VarChar(10)

  clock       String?   @db.VarChar(8) // HH:mm:ss       // horário definido do hábito

  limitCounter  Int? @default(1)

  status      HabitStatus @default(ACTIVE)

  startDate   DateTime  @default(now()) @map("start_date")
  endDate     DateTime? @map("end_date")

  reminder    Boolean?   @default(false)
  frequency   Json?      @default("[\"M\",\"T\",\"W\",\"T\",\"F\",\"S\",\"S\"]")
  color       String?    @default("#3B82F6") @db.VarChar(7)

  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime? @updatedAt @map("updated_at")
  deletedAt   DateTime? @map("deleted_at")

  user        User @relation(fields: [userId], references: [id], onDelete: Cascade)

  schedules   HabitSchedule[]
  completions HabitCompletion[]
  goals       Goals[]   // many-to-many implícito

  @@index([userId])
  @@map("habits")
}

model HabitSchedule {
  id            String @id @default(uuid())
  habitId       String @map("habit_id")

  scheduledDate DateTime 
  isCompleted   Boolean   @default(false)
  completedAt   DateTime? 
  createdAt     DateTime  @default(now())

  habit Habit @relation(fields: [habitId], references: [id], onDelete: Cascade)

  @@unique([habitId, scheduledDate])
  @@index([scheduledDate])
  @@index([habitId, scheduledDate])
  @@map("habit_schedules")
}

model HabitCompletion {
  id      String @id @default(uuid())

  habitId String @map("habit_id")

  completedDate DateTime
  counter       Int? @default(0)            // null = conta apenas 1 vez

  createdAt     DateTime  @default(now())
  updatedAt     DateTime? @updatedAt

  habit       Habit @relation(fields: [habitId], references: [id], onDelete: Cascade)
  annotations Annotations?

  @@unique([habitId, completedDate])
  @@map("habit_completions")
}

model MoodEntry {
  id      String @id @default(uuid())
  userId  String @map("user_id")

  moodType  String   @db.VarChar(50) @map("mood_type")
  moodLevel String   @db.VarChar(50) @map("mood_level")
  entryDate DateTime @unique @default(now()) @map("entry_date")
  
  createdAt DateTime @default(now()) 
  updatedAt DateTime? @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, entryDate])
  @@index([entryDate])
  @@index([userId])
  @@map("mood_entries")
}

model Goals {
  id            String  @id @default(uuid())
  userId        String  @map("user_id")

  name          String
  description   String
  emoji         String   @db.VarChar(10)

  createdAt     DateTime  @default(now())
  updatedAt     DateTime? @updatedAt

  habits        Habit[]

  status        HabitStatus? @default(ACTIVE)
  @@map("goals")
}

model Annotations {
  id           String @id @default(uuid())
  
  name         String
  content      String

  completionId String @unique @map("completion_id")
  completion   HabitCompletion @relation(fields: [completionId], references: [id], onDelete: Cascade)
  
  createdByAI Boolean? @default(false)
  summary String?

  imageUrl     String? @db.VarChar(255)

  createdAt    DateTime   @default(now())
  updatedAt    DateTime?  @updatedAt

  @@map("annotations")
}